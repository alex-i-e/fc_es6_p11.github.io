{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,   // enable strict null checks as a best practice
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true             // allow a partial TypeScript and JavaScript codebase
  },
  "awesomeTypescriptLoaderOptions": {
    /* ... */
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
